    <div id="modal-id" class="modal js-modal">
      <div class="modal-container js-modal-container">
            <div class="modal-container-header">
                <div class="modal-task js-modal-task">
                    Add Task <i class="ti-close"> </i></div>
            </div>


            <div class="modal-container-body">
                <label for="task-input" class="modal-label">
                    Task
                </label>
                <input id="task-input" type="text" class="modal-input" placeholder="Type your task here">
                <span class="message"></span>
            </div>

            
            <div class="modal-priority">
                <span>Priority</span>
                <div class="buttons">
                    <button class="modal-button btnH high">High</button>
